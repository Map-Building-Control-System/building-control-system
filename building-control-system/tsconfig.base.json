{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@building-control-system/Map": ["libs/Map/src/index.ts"],
      "@building-control-system/Map/server": ["libs/Map/src/server.ts"],
      "@building-control-system/MapComponent": [
        "libs/MapComponent/src/index.ts"
      ],
      "@building-control-system/MapComponent/server": [
        "libs/MapComponent/src/server.ts"
      ],
      "@building-control-system/auth": ["libs/auth/src/index.ts"],
      "@building-control-system/auth/server": ["libs/auth/src/server.ts"],
      "@building-control-system/buttoncomponent": [
        "libs/buttoncomponent/src/index.ts"
      ],
      "@building-control-system/buttoncomponent/server": [
        "libs/buttoncomponent/src/server.ts"
      ],
      "@building-control-system/map": ["libs/map/src/index.ts"],
      "@building-control-system/map-openlayers": [
        "libs/map/map-openlayers/src/index.ts"
      ],
      "@building-control-system/map-openlayers/server": [
        "libs/map/map-openlayers/src/server.ts"
      ],
      "@building-control-system/map/server": ["libs/map/src/server.ts"],
      "@building-control-system/openlayers-map": [
        "libs/map/openlayers-map/src/index.ts"
      ],
      "@building-control-system/openlayers-map/server": [
        "libs/map/openlayers-map/src/server.ts"
      ],
      "@building-control-system/oplmap": ["libs/oplmap/src/index.ts"],
      "@building-control-system/oplmap/server": ["libs/oplmap/src/server.ts"],
      "@building-control-system/testcomponent": [
        "libs/auth/testcomponent/src/index.ts"
      ],
      "@building-control-system/testcomponent/server": [
        "libs/auth/testcomponent/src/server.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
